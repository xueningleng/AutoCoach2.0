<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/warm1"
    tools:context=".Activities.SummaryActivity">

    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/sign_in_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/projectTitle"
        />
    <ImageView
        android:id="@+id/bg4"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/projectTitle"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/projectTitle">
        <ImageView
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sign_up_folder"
        />
        <TextView
            android:id="@+id/score_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/stalinist_one"
            android:shadowColor="@color/warm2"
            android:shadowRadius="2"
            android:text="Score: "
            android:textAllCaps="true"
            android:textColor="@color/warm4"
            android:textSize="12sp"
            android:typeface="monospace"
            />
        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/stalinist_one"
            android:shadowColor="@color/warm2"
            android:shadowRadius="2"
            android:text="50"
            android:textAllCaps="true"
            android:textColor="@color/warm4"
            android:textSize="24sp"
            android:typeface="monospace"
            />

    </FrameLayout>
    <ImageView
        android:id="@+id/bg3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="180dp"
        app:srcCompat="@drawable/dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/projectTitle"
        />
    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/stalinist_one"
        android:text="EXIT"
        android:textColor="@color/warm4"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/projectTitle"
    />
    <TextView
        android:id="@+id/projectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/stalinist_one"
        android:shadowColor="@color/dark_grey"
        android:shadowRadius="2"
        android:text="Trip Summary"
        android:textAllCaps="true"
        android:textColor="@color/warm4"
        android:textSize="24sp"
        android:typeface="monospace"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>