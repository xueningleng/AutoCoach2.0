<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/headpositiondebug_camerahost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm3"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="Camera Host"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/headpositiondebug_camerahostedit"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@color/warm4"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:hint="example.com"
                        android:inputType="text"
                        android:textColorHint="@color/dark_orange"
                        android:textSize="15sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/headpositiondebug_cameraport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm2"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="Camera Port"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/headpositiondebug_cameraportedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm4"
                        android:ems="8"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="65432"
                        android:textColor="@color/dark_orange"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/headpositiondebug_cameraconnectbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/warm2"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"

                        android:text="Connect"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/headpositiondebug_leftangle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm3"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="Left Angle"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/headpositiondebug_leftanglevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm4"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="N/A"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/headpositiondebug_frontangle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm2"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="Front Angle"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/headpositiondebug_frontanglevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm4"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="N/A"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/headpositiondebug_calibratebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/warm2"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"

                        android:text="Calibrate"
                        android:textSize="15sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/rightangle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm3"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="Right Angle"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/headpositiondebug_rightanglevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm4"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="N/A"
                        android:textSize="15sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/headpositiondebug_gyrohost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm3"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="Gyroscope Host"
                        android:textSize="15sp" />



                    <EditText
                        android:id="@+id/headpositiondebug_gyrohostedit"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@color/warm4"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:hint="example.com"
                        android:inputType="text"
                        android:textColorHint="@color/dark_orange"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/headpositiondebug_gyroconnectbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/warm2"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"

                        android:text="Connect"
                        android:textSize="15sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/headpositiondebug_gyroport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm3"
                        android:ems="10"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:text="Gyroscope Port"
                        android:textSize="15sp" />



                    <EditText
                        android:id="@+id/headpositiondebug_gyroportedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warm4"
                        android:ems="8"
                        android:fontFamily="@font/overlock_black"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="80"
                        android:textColor="@color/dark_orange"
                        android:textSize="15sp" />


                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>