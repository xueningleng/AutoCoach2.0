<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warm1"
    tools:context=".Activities.MainActivity">


    <ImageButton
        android:id="@+id/signUpFolder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/sign_up_folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf ="parent"/>

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/warm2"
        android:fontFamily="@font/aclonica"
        android:text="@string/sign_up"
        android:textColor="@color/warm1"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@id/signUpFolder"
        app:layout_constraintStart_toStartOf="@id/signUpFolder" />

    <ImageButton
        android:id="@+id/signInFolder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="300dp"
        app:srcCompat="@drawable/sign_in_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf ="parent" />
    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/warm3"
        android:fontFamily="@font/aclonica"
        android:layout_marginLeft="16dp"
        android:text="@string/sign_in"
        android:textColor="@color/warm1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/signInFolder"
        app:layout_constraintBottom_toTopOf="@+id/signInFolder" />

    <TextView
        android:id="@+id/projectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/app_name"
        android:textColor="@color/warm4"
        android:textSize="48sp"
        android:shadowRadius="2sp"
        android:shadowColor="@color/warm2"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@id/signUpFolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>